# ============================================================
# B2B Agent System – Required Keys
# ============================================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# B2B Data & Outreach APIs
# Scout 使用 ddgs（免费），无需 API Key
APOLLO_API_KEY=your-apollo-api-key         # Apollo.io contact enrichment
ANTHROPIC_API_KEY=your-anthropic-api-key   # Claude (Claudette SDK)

# ============================================================
# General Application
# ============================================================

# Database
POSTGRES_USER=b2b_user
POSTGRES_PASSWORD=b2b_password
POSTGRES_DB=b2b_db
DATABASE_URL=postgresql://b2b_user:b2b_password@localhost:5432/b2b_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# AI Provider
AI_PROVIDER=tongyi
TONGYI_API_KEY=your-tongyi-api-key
TONGYI_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_API_KEY=your-qwen-api-key
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Gmail API
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/callback/gmail

# Outlook API
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:3000/callback/outlook
OUTLOOK_TENANT_ID=common

# WhatsApp
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# Data Service APIs
APIFY_API_KEY=your-apify-api-key
BRIGHT_DATA_API_KEY=your-bright-data-api-key
ZYTE_API_KEY=your-zyte-api-key

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json

# Feishu
FEISHU_APP_ID=your-feishu-app-id
FEISHU_APP_SECRET=your-feishu-app-secret

# DingTalk
DINGTALK_APP_KEY=your-dingtalk-app-key
DINGTALK_APP_SECRET=your-dingtalk-app-secret

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting
EMAIL_RATE_LIMIT=100
WHATSAPP_RATE_LIMIT=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Storage
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports
TEMPLATE_DIR=./app/templates

# Monitoring
ENABLE_METRICS=True
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
